<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <flow-layout direction="horizontal">
                            <children>
                                <button id="back">
                                    <text>Back</text>
                                    <sizing>
                                        <horizontal method="fill">20</horizontal>
                                    </sizing>
                                </button>

                                <stack-layout>
                                    <children>
                                        <label id="observation-source-name">
                                            <margins>
                                                <all>5</all>
                                            </margins>
                                        </label>
                                    </children>
                                    <surface>
                                        <panel-inset/>
                                    </surface>
                                    <margins>
                                        <left>5</left>
                                    </margins>
                                    <sizing>
                                        <horizontal method="fill">80</horizontal>
                                    </sizing>
                                </stack-layout>
                            </children>
                            <vertical-alignment>center</vertical-alignment>
                            <sizing>
                                <horizontal method="fill">60</horizontal>
                            </sizing>
                            <margins>
                                <bottom>5</bottom>
                            </margins>
                        </flow-layout>

                        <mcotelcore.suggesting-text-box id="metric-name">
                            <sizing>
                                <vertical method="content">1</vertical>
                                <horizontal method="fill">60</horizontal>
                            </sizing>
                            <margins>
                                <bottom>5</bottom>
                            </margins>
                        </mcotelcore.suggesting-text-box>

                        <scroll direction="vertical">
                            <flow-layout direction="vertical" id="attribute-mapping">
                                <children>
                                    <grid-layout rows="2" columns="3">
                                        <children>
                                            <label row="0" column="0">
                                                <text>instr_met_1</text>
                                            </label>
                                            <collapsible row="0" column="1">
                                                <children>
                                                    <dropdown row="1" column="1">
                                                        <entries>
                                                            <button>
                                                                <text>source_met_1</text>
                                                            </button>
                                                            <button>
                                                                <text>source_met_2</text>
                                                            </button>
                                                            <button>
                                                                <text>source_met_3</text>
                                                            </button>
                                                            <button>
                                                                <text>source_met_4</text>
                                                            </button>
                                                        </entries>
                                                    </dropdown>
                                                </children>
                                                <text>Select</text>
                                            </collapsible>
                                            <label row="0" column="2">
                                                <text>Optional</text>
                                            </label>
                                            <label row="1" column="0">
                                                <text>instr_met_2</text>
                                            </label>
                                            <collapsible row="1" column="1">
                                                <children>
                                                    <dropdown row="1" column="1">
                                                        <entries>
                                                            <button>
                                                                <text>source_met_1</text>
                                                            </button>
                                                            <button>
                                                                <text>source_met_2</text>
                                                            </button>
                                                            <button>
                                                                <text>source_met_3</text>
                                                            </button>
                                                            <button>
                                                                <text>source_met_4</text>
                                                            </button>
                                                        </entries>
                                                    </dropdown>
                                                </children>
                                                <text>Select</text>
                                            </collapsible>
                                            <label row="1" column="2">
                                                <text>Optional</text>
                                            </label>
                                        </children>
                                        <horizontal-alignment>center</horizontal-alignment>
                                        <vertical-alignment>center</vertical-alignment>
                                        <sizing>
                                            <horizontal method="fill">100</horizontal>
                                        </sizing>
                                    </grid-layout>
                                </children>

                                <padding>
                                    <all>5</all>
                                </padding>
                            </flow-layout>

                            <sizing>
                                <vertical method="fill">40</vertical>
                                <horizontal method="fill">60</horizontal>
                            </sizing>

                            <surface>
                                <panel-inset/>
                            </surface>
                        </scroll>
                    </children>

                    <horizontal-alignment>center</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>

                    <padding>
                        <all>10</all>
                    </padding>

                    <surface>
                        <panel dark="false"/>
                    </surface>
                </flow-layout>
            </children>

            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>
